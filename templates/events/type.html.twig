{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center mb-2">{{ (app.request.get('type'))|capitalize }}</h1>

    <div class="container ">
    <div class="row  text-center justify-content-center gap-3">
        {% for event in events %}
        
          <div class="card col-6 col-md-4" style="width: 18rem;">
  <img src="{{ event.image }}" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{ event.name }}</h5>
    <p class="card-text">{{ event.time ? event.time|date('Y-m-d H:i') : '' }}</p>
    <a class="btn btn-primary mb-2" href="{{ path('app_events_show', {'id': event.id}) }}">Details</a>
    <a  class="btn btn-success mb-2"href="{{ path('app_events_edit', {'id': event.id}) }}">Edit</a>
    {{ include('events/_delete_form.html.twig') }}
  </div>
</div>

        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </div>
   </div>

    <a class="btn btn-primary mb-2" href="{{ path('app_events_index') }}">All events</a>
{% endblock %}
